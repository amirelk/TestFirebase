<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@android:color/holo_orange_dark"
    tools:context="com.test.amirelkayam.testfirebase.Suppliers">

    <Button
        android:text="הוספת ספק חדש"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_findSuppliers"
        android:layout_toLeftOf="@+id/btn_findSuppliers"
        android:layout_toStartOf="@+id/btn_findSuppliers"
        android:layout_marginTop="26dp"
        android:onClick="btnNewSupplier_Click"
        android:id="@+id/btn_newSupplier" />

    <Button
        android:text="חיפוש"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:id="@+id/btn_findSuppliers"
        android:onClick="btnFindSuppliers_Click"
        android:layout_alignTop="@+id/editText_findSuppliers"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_image"
        android:background="@drawable/logo1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="הזן שם ספק לחיפוש..."
        android:ems="10"
        android:layout_marginTop="43dp"
        android:id="@+id/editText_findSuppliers"
        android:layout_below="@+id/main_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="חזור"
        android:textColor="#0033CC"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />

</RelativeLayout>
